@model DDDEastAnglia.Models.Session

@{
    ViewBag.Title = string.Format("Delete {0}?", Model.Title);
}

<h2>@ViewBag.Title</h2>

<p>Deleting a session cannot be undone. Are you <em>really</em> sure you want to delete this session?</p>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <p>
        <input type="submit" class="btn btn-danger" value="Delete session" />
        @Html.ActionLink("Cancel", "Index")
    </p>
}
