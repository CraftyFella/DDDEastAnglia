@model DDDEastAnglia.Areas.Admin.Models.VotingStatsViewModel

@section header
{
    <style>
        #startdate {
            float: left;
            margin-right: 10px;
        }
        
        #enddate {
            float: right;
            margin-left: 10px;
        }
    </style>
}

<div class="well">
    <h3>General Stats</h3>

    <ul>
        <li>@Model.TotalVotes votes cast in @Model.NumberOfDaysOfVotingPassed days by @Model.NumberOfUsersWhoHaveVoted users.</li>
        <li>@Model.NumberOfDaysOfVotingRemaining days of voting remaining.</li>
    </ul>

    <div>
        <span id="startdate">@Model.VotingStartDate.ToLongDateString()</span>
        <span id="enddate">@Model.VotingEndDate.ToLongDateString()</span>
        <div id="progressbar"><div id="progresslabel"></div></div>
    </div>
</div>

<div class="well">
    <h3>Time-based Stats</h3>

    <ul>
        <li>@Html.ActionLink("Votes per day", "VotesPerDay")</li>
        <li>@Html.ActionLink("Votes per hour", "VotesPerHour")</li>
    </ul>
</div>

<div class="well">
    <h3>Session Stats</h3>

    <ul>
        <li>@Html.ActionLink("Votes for the top 15 sessions", "Leaderboard", new { limit = 15 })</li>
        <li>@Html.ActionLink("Votes for all sessions", "Leaderboard")</li>
        <li>'Normalised' top 15 sessions</li>
        <li>'Normalised' sessions</li>
    </ul>
</div>

<div class="well">
    <h3>User Stats</h3>

    <ul>
        <li>Known users who have voted + vote counts</li>
        <li>Unknown users who have voted + vote counts (use gravatar pics)</li>
        <li>(All?) users linked to the sessions voted for</li>
    </ul>
</div>

<div class="well">
    <h3>IP Address Stats</h3>

    <ul>
        <li>@Html.ActionLink("Votes per IP address", "IPAddresses")</li>
        <li>@Html.ActionLink("Voters per IP address", "VotersPerIPAddress")</li>
        <li>The sessions that each IP addresses has voted for</li>
    </ul>
</div>

@section scripts
{
    <script>
        $(function() {
            $("#progressbar").progressbar({
                max: @Model.NumberOfDaysOfVoting,
                value: @Model.NumberOfDaysOfVotingPassed
                });
            $("#progresslabel").text("@((int) (Model.NumberOfDaysOfVotingPassed * 1.0f / Model.NumberOfDaysOfVoting * 100)) %");
        });
    </script>    
}