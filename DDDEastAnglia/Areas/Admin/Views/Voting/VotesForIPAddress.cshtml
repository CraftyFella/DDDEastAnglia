@model DDDEastAnglia.Areas.Admin.Models.VotesForIpAddressViewModel

<h2>Voters for IP Address @Model.IPAddress</h2>

<p>This shows number of votes for each person who voted from @Model.IPAddress.</p>

<table class="table table-striped table-hover table-condensed">
    <thead>
        <tr><th>
            Cookie Id
        </th><th class="barchart">
            Number of Votes
        </th></tr>
    </thead>

    <tbody>
    @foreach (var item in @Model.DistinctVotes)
    {
        <tr><td>
            @Html.DisplayFor(modelItem => item.CookieId)
        </td><td>
            <div id="progressbar@(item.NumberOfVotes)" data-value="@item.NumberOfVotes"></div>
            @Html.DisplayFor(modelItem => item.NumberOfVotes)
        </td></tr>
    }
    </tbody>
</table>

@section scripts
{
    <script>
        $('div[id^="progressbar"]').each(function() {
            var votes = parseInt($(this).attr("data-value"));
            $(this).progressbar({
                max: @Model.HighestNumberOfVotes,
                value: votes
            });
        });
    </script>
}
