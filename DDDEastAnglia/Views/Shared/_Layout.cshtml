<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - My ASP.NET MVC Application</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/Markdown")
    @Styles.Render("~/Content/Markdown")

</head>
<body>
    <header>
        <div class="content-wrapper">
            <div class="float-left">
                <span class="site-title"><a href="@Url.Action(MVC.Home.Index())">
                    <img src="/Images/logo-small.png" alt="DDD East Anglia logo" /></a></span>

            </div>
            <div class="float-right">
                <div>DDD East Anglia</div>
                <div>Cambridge, UK</div>
                <div>Saturday 29<sup>th</sup> June 2013</div>
            <section id="login">
                @Html.Partial("_LoginPartial")
            </section>
            <nav>
                <ul id="menu">
                    <li>@Html.ActionLink("Home", MVC.Home.Index())</li>
                    <li>@Html.ActionLink("Venue", MVC.Home.Venue())</li>
                    <li>@Html.ActionLink("Sponsors", MVC.Home.Sponsors())</li>
                    <li>@Html.ActionLink("Team", MVC.Home.Team())</li>
                    <li>@Html.ActionLink("Sessions", MVC.Session.Index())</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                </ul>
            </nav>
        </div>
        </div>
    </header>
    <div id="body">
        @RenderSection("featured", required: false)
        <section class="content-wrapper main-content clear-fix">
            @RenderBody()
        </section>
    </div>
    <footer>
        <div class="content-wrapper">
            <div class="float-left">
                <p>&copy; @DateTime.Now.Year - DDD Community</p>
            </div>
        </div>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)

    @{Html.RenderPartial(MVC.Shared.Views._GoogleAnalytics);}
</body>
</html>
