@model ICollection<DDDEastAnglia.Models.ExternalLogin>

@if (Model.Count > 0)
{
    foreach (DDDEastAnglia.Models.ExternalLogin externalLogin in Model)
    {
        <div>
            @externalLogin.ProviderDisplayName

            @if (ViewBag.ShowRemoveButton)
            {
                using (Html.BeginForm("DisassociateLogin", "Account"))
                {
                    @Html.AntiForgeryToken()
                    @Html.Hidden("provider", externalLogin.Provider)
                    @Html.Hidden("providerUserId", externalLogin.ProviderUserId)
                    <input type="submit" value="Remove" title="Remove this login from your account" />
                }
            }
        </div>
    }
}
