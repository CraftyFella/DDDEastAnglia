@model IEnumerable<DDDEastAnglia.Models.Session>

@{
    ViewBag.Title = "Sessions";
}

<h2>Sessions</h2>

<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Speaker.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Speaker.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.ActionLink("Details", "Details", new { id = item.SessionId }) |
                @if (User.Identity.Name == item.Speaker.UserName)
                {
                    @Html.ActionLink("Edit", "Edit", new { id = item.SessionId }) @Html.Raw(" |")
                    @Html.ActionLink("Delete", "Delete", new { id = item.SessionId })
                }
            </td>
        </tr>
    }

</table>
